<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <%= f.label :position %>
  <%= f.number_field :position, class: "form-input", min: 0, max: 16 %>
  
  <%= f.label :hex %>
  <%= f.color_field :hex, class: "form-input" %>

  <%= f.label :percentage %>
  <%= f.number_field :percentage, class: "form-input", step: 0.01, min: 0, max: 1 %>

  <button type="button" data-action="nested-form#remove">Remove colour_stop</button>

  <%= f.hidden_field :_destroy %>
</div>
